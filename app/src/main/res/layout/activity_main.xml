<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nauman.insertionsort.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Sort"
        android:id="@+id/search_close_btn"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/et"
        android:inputType="number"
        android:hint="e.g 44,54,34,22,10"
        android:layout_below="@+id/search_close_btn"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/et"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_below="@+id/et1"
android:id="@+id/arraytv"
        android:textColor="@android:color/holo_green_dark"
        android:text="Sorted array"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"

        android:layout_below="@+id/arraytv" />
</RelativeLayout>